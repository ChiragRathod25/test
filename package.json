{
  "name": "immigration_crm_backend",
  "version": "1.0.0",
  "description": "Immigration Backend",
  "main": "src/index.ts",
  "scripts": {
    "typesync": "typesync",
    "dev": "NODE_ENV=development nodemon src/index.ts",
    "build": "nx run immigration_crm_backend:build",
    "start": "nx run immigration_crm_backend:start",
    "dev-test": "NODE_ENV=test nodemon src/index.ts",
    "add-build": "git add dist",
    "lint": "eslint . --ext .ts",
    "prettier-format": "run-script-os",
    "prettier-format:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
    "prettier-format:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-format:default": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "run-script-os",
    "prettier-watch:win32": "onchange \"src/**/*.ts\" -- prettier --write {{changed}}",
    "prettier-watch:darwin:linux": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prettier-watch:default": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "test": "nx run immigration_crm_backend:test",
    "test:dev": "nx run immigration_crm_backend:test:dev",
    "plop": "plop",
    "prepare": "husky install",
    "pre-commit": "npm run prettier-format && npm run lint && npm run test"
  },
  "pre-commit": [
    "build",
    "add-build"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^8.1.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.0",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@nrwl/jest": "^19.0.5",
    "@nrwl/linter": "^19.0.5",
    "@nrwl/workspace": "^19.0.5",
    "@nx/eslint": "19.0.5",
    "@nx/jest": "19.0.5",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/readline-sync": "^1.4.8",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.5.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.4",
    "nodemon": "^3.1.0",
    "nx": "^19.0.5",
    "onchange": "^7.1.0",
    "plop": "^4.0.1",
    "prettier": "^3.2.5",
    "readline-sync": "^1.4.10",
    "run-script-os": "^1.1.6",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typesync": "^0.12.1"
  },
  "nx": {},
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.ts": "eslint --cache --fix",
    "*.jsx": "eslint --cache --fix",
    "*.tsx": "eslint --cache --fix"
  }
}
